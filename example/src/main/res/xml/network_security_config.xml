<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Example module: Allow HTTP for development and testing -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow HTTP for localhost and development servers -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">192.168.0.1</domain>
        <!-- Allow HTTP for development API endpoints -->
        <domain includeSubdomains="true">api-test.seel.com</domain>
        <domain includeSubdomains="true">www.seel.com</domain>
    </domain-config>
    
    <!-- Default configuration for production - only HTTPS -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system CAs -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
